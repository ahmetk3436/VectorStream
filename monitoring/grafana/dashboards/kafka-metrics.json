{
  "dashboard": {
    "id": null,
    "title": "VectorStream - Kafka Metrikleri",
    "tags": ["vectorstream", "kafka", "messaging"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Kafka Bağlantı Durumu",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"kafka\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DISCONNECTED"
                  },
                  "1": {
                    "text": "CONNECTED"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "İşlenen Mesaj Oranı (msg/sec)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(kafka_consumer_records_consumed_total[5m])",
            "refId": "A",
            "legendFormat": "{{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Başarısız Mesaj Oranı (msg/sec)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(kafka_consumer_fetch_manager_records_lag[5m])",
            "refId": "A",
            "legendFormat": "Consumer Lag - {{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Consumer Lag",
        "type": "timeseries",
        "targets": [
          {
            "expr": "kafka_consumer_lag_sum",
            "refId": "A",
            "legendFormat": "{{topic}} - {{partition}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Toplam İşlenen Mesajlar",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kafka_consumer_records_consumed_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Toplam Başarısız Mesajlar",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kafka_messages_failed_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Başarı Oranı (%)",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(kafka_messages_processed_total[5m])) / (sum(rate(kafka_messages_processed_total[5m])) + sum(rate(kafka_messages_failed_total[5m])))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 90
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Topic Bazında Mesaj Dağılımı",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (topic) (kafka_messages_processed_total)",
            "refId": "A",
            "legendFormat": "{{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": [
        {
          "name": "topic",
          "type": "query",
          "query": "label_values(kafka_messages_processed_total, topic)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": []
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}